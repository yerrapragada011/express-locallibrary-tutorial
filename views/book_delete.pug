extends layout

block content

  h1 #{title}: #{book.title}
  p= book.author

  if book_instances.length

    p #[strong Delete the following books instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Books
      dl
        each bookinstance in book_instances
          dt
            a(href=bookinstance.url) #{bookinstance.book}
          dd #{bookinstance.status}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
